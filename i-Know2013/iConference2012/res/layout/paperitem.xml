<RelativeLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/Relativelayout01"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/White">
	<LinearLayout android:orientation="vertical"
		android:id="@+id/LinearLayout01"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_alignParentLeft="true"
		android:background="@drawable/White">
	<ImageButton android:id="@+id/ImageButton01"
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:src="@drawable/no_schedule"
        android:background="@drawable/White"
        android:paddingLeft="5pt"
        android:paddingTop="5pt">
    </ImageButton>
	<ImageButton android:id="@+id/ImageButton02"
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:src="@drawable/no_star"
        android:background="@drawable/White"
        android:paddingLeft="5pt"
        android:paddingBottom="5pt">
    </ImageButton>
	</LinearLayout>
	<LinearLayout android:orientation="vertical"
		android:id="@+id/LinearLayout02"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/LinearLayout01"
		android:background="@drawable/White">
	<TextView android:id="@+id/title" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:textColor="@drawable/darkblue"
		android:textStyle="bold"
		android:background="@drawable/White"
		android:padding="5pt">
	</TextView>
	<TextView    android:id="@+id/time"
              android:layout_height="wrap_content"   
        android:layout_width="fill_parent"   
        android:textColor="@drawable/Gray"
        android:background="@drawable/White"
        android:paddingLeft="5pt"
        android:paddingRight="5pt">  
	</TextView>
	<TextView    android:id="@+id/author"
              android:layout_height="wrap_content"   
        android:layout_width="fill_parent"   
        android:textColor="@drawable/Gray"
        android:background="@drawable/White"
        android:paddingLeft="5pt"
        android:paddingRight="5pt">  
	</TextView>
	<TextView    android:id="@+id/type"
               android:layout_height="wrap_content"   
        android:layout_width="fill_parent"   
        android:textColor="@drawable/Gray"
        android:background="@drawable/White"
        android:paddingBottom="5pt"
        android:paddingLeft="5pt"
        android:paddingRight="5pt">  
	</TextView>
	</LinearLayout>
	<TextView android:id="@+id/arrow"
		android:layout_height="fill_parent"
		android:layout_width="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignTop="@id/LinearLayout02"
		android:layout_alignBottom="@id/LinearLayout02"
		android:gravity="center_vertical"
		android:text=">"
		android:textStyle="bold"
		android:textColor="@drawable/darkblue"
		android:background="@drawable/White">
	</TextView>
</RelativeLayout>
