<LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent"
 	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@drawable/White">
	<RelativeLayout android:id="@+id/RelativeLayout01"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:background="@drawable/rectshape">
		<TextView android:id="@+id/status"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textColor="@drawable/lightblue"
			android:layout_alignParentLeft="true"
			android:visibility="gone">
		</TextView>
		<TextView android:id="@+id/name"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textColor="@drawable/White"
			android:layout_alignParentLeft="true"
			android:layout_below="@id/status"
			android:textSize="10pt">
		</TextView>
		<Button android:id="@+id/action" 
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Remove connection"
			android:layout_alignParentLeft="true"
			android:layout_below="@id/name"
			android:padding="5dip"
			android:visibility="gone"/>
		<ImageView android:id="@+id/photo"
			android:layout_height="80dip"
			android:layout_width="80dip"
			android:layout_alignParentRight="true"
			android:src="@drawable/user_big">
		</ImageView>
	</RelativeLayout>
	<TextView android:id="@+id/position"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:textColor="@drawable/darkblue">
	</TextView>
	<TextView android:id="@+id/organization"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:textColor="@drawable/darkblue">
	</TextView>
	<TextView android:id="@+id/country"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:textColor="@drawable/darkblue">
	</TextView>
	<TextView android:id="@+id/linkedin"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:textColor="@drawable/darkblue"
		android:autoLink="web">
	</TextView>
</LinearLayout>
